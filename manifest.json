{
	"name": "Social Web Tracking",
	"version": "1.0",
	"description": "This Extension is usefull for tracking of time spents on social sites.",
	"permissions": ["activeTab","declarativeContent","storage","tabs","alarms","notifications","unlimitedStorage"],
	"options_page": "options.html",
	"background": {
		"scripts": ["assets/js/background.js"],
		"persistent": false
    },
	"page_action": {
		"default_popup": "src/popup.html",
		"default_icon": {
			"16": "assets/images/icons/icon.png",
			"32": "assets/images/icons/icon.png",
			"48": "assets/images/icons/icon.png",
			"128": "assets/images/icons/icon.png"
		}
    },
	"icons": {
		"16": "assets/images/icons/icon.png",
		"32": "assets/images/icons/icon.png",
		"48": "assets/images/icons/icon.png",
		"128": "assets/images/icons/icon.png"
    },
	"manifest_version": 2
}